<%- include("partials/header.ejs")%>
<div class="ui text container">
    <h1 class="ui header">HOME PAGE</h1>
    <a class="ui red basic button" href="/add">Add</a>
    <div class="ui items">
        <% detail.forEach(function(blog){%>
        <div class="item">
            <div class="ui medium image"><img src="<%=blog["image"]%>"></div>
            <div class="content">
                <h1><%=blog["name"]%></h1>
                <p><%=blog["desc"].substring(0,115)%>
                    <a href="<%= blog._id %> ">more</a>
                </p>
            </div>
        </div>

        <%} )%>
    </div>
</div>

